# Database Configuration
DATABASE_URL=postgresql://finuser:your_password@localhost:5432/financial_intelligence
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./financial_intelligence.db

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Groq Cloud API
GROQ_API_KEY=your_groq_api_key_here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-min-32-characters-long-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Financial Intelligence Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
